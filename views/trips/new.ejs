<!DOCTYPE html>
<html lang="en">
<% layout('layouts/boilerplate') %>
    <div class="row">
        <h2 class="text-center">New Trip</h2>
        <div class="col-6 offset-3">
            <form action="/trips" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="place">Place</label>
                    <input class="form-control" type="text" id="place" name="trip[place]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="trip[location]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image</label>
                    <input class="form-control" type="text" id="image" name="trip[image]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="trip[description]" required></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add</button>
                </div>
            </form>
            <a href="/trips">All trips</a>
        </div>
    </div>

