<% layout('layouts/boilerplate') %>
<div class="row">
    <h2 class="text-center">Edit</h2>
    <div class="col-6 offset-3">
        <form action="/trips/<%= trip._id %>?_method=PUT" method="POST" class="validated-form" novalidate>
            <div class="mb-3">
                <label class="form-label" for="place">Place</label>
                <input class="form-control" type="text" id="place" name="trip[place]" value="<%= trip.place %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="trip[location]" value="<%= trip.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" id="image" name="trip[image]" value="<%= trip.image %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control " type="text" id="description" name="trip[description]" required><%= trip.description %></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update</button>
            </div>
        </form>
        <div>
            <a href="/trips/<%= trip._id %>">Back to trip</a>
        </div>
    </div>
</div>