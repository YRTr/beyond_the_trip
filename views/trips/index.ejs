<% layout('layouts/boilerplate') %>
    <h1>All Explored!</h1>
    <div>
        <a href="/trips/new">Add Trip</a>
    </div>
    
    <% for (let trip of trips) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=trip.image%>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= trip.place %></h5>
                        <p class="card-text"><%= trip.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= trip.location %></small>
                        </p>
                        <a class="btn btn-primary" href="/trips/<%= trip._id %>">View <%=trip.place %></a>
                    </div>
                </div>
            </div>
        </div>
    <% } %>